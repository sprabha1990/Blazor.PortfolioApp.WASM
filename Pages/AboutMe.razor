@page "/aboutme"
@inject HttpClient _client

<div class="container-fluid" style="margin-bottom: 5rem">
    <div class="card mb-3 mt-3">
      <div class="row g-0">
            <div class="col-lg-2 shadow-sm p-1 bg-body rounded">
              <img src="images/SamplePicture.jpg" class="img-fluid rounded-start" style="height: 100%" alt="Sugumar Prabhakar">
            </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">Card title</h5>
            <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
            <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
            <div class="row">
                <div class="col d-flex justify-content-center align-items-center">
                       <button type="button" class="btn btn-outline-danger col-sm-4 col-md-2"><i class="fa-sharp fa-solid fa-file me-3"></i>Download</button>
                            <div class="container p-4 pb-0">
                                <!-- Section: Social media -->
                                <section class="mb-4">
                                    <!-- Twitter -->
                                    <a class="btn text-white btn-floating m-1"
                                       style="background-color: #55acee;"
                                       href="#!"
                                       role="button">
                                        <i class="fab fa-twitter"></i>
                                    </a>

                                    <!-- Linkedin -->
                                    <a class="btn text-white btn-floating m-1"
                                       style="background-color: #0082ca;"
                                       href="#!"
                                       role="button">
                                        <i class="fab fa-linkedin-in"></i>
                                    </a>
                                    <!-- Github -->
                                    <a class="btn text-white btn-floating m-1"
                                       style="background-color: #333333;"
                                       href="#!"
                                       role="button">
                                        <i class="fab fa-github"></i>
                                    </a>

                                    <!-- Dev.Io -->
                                    <a class="btn text-white btn-floating m-1"
                                       style="background-color: #333333;"
                                       href="#!"
                                       role="button">
                                        <i class="fab fa-dev"></i>
                                    </a>
                                </section>
                                <!-- Section: Social media -->
                            </div>
                </div>
              </div>
             
          </div>
        </div>
      </div>
    </div>
    <div class="d-flex flex-direction-column">
        <div class="card about-me-details col text-start">
            <div class="card-body">
                <div class="row">
                    <p class="mb-1">
                        A passionate Microsoft-certified professional having 11+ years of experience in the software industry, extensively in developing full-stack applications from frontend UI-based applications to the web API services that connect with the backend databases. Though I worked primarily in software application development, I also have experience in Dockers and AWS CICD pipelines for deploying applications and APIs as microservices.
                        As a software engineer, the following are the main areas where I have predominant experience.
                    </p>
                    <p class="mt-2"><mark class="bg-success text-white">FRONT-END</mark></p>
                    <p class="ms-5">Major experience in developing windows-based client applications using <mark>WPF</mark> Framework.</p>
                    <p class ="ms-5">Couple of years of experience in developing SPA applications using <mark>React JS</mark>.</p>
                    <p class="mt-2"><mark class="bg-success text-white">BACK-END</mark></p>
                    <p class="ms-5">5+ years of experience in creating and maintaining ASP .Net Core Web API services</p>
                    <p class="ms-5">Couple of years of experience in creating microservices and deploying it as docker container images.</p>
                   
                </div>
                <div class="row d-flex justify-content-center mt-3 shadow-sm p-3 mb-5 bg-body rounded">
                    <div class="col-md-1 col-sm-2 text-center">
                        <i class="devicon-csharp-plain-wordmark colored skill-icon" title="C# 11.0 (latest)"></i>
                    </div>
                    <div class="col-md-1 col-sm-2 text-center">
                        <i class="fa-brands fa-aws skill-icon" title="Services like ECS, ECR, S3, DynamoDB, ALB, VPC, CodePipeline & other dev tools etc"></i>
                    </div>
                    <div class="col-md-1 col-sm-2 text-center">
                        <i class="devicon-dotnetcore-plain colored skill-icon" title=".NET 6.0"></i>
                    </div>
                    <div class="col-md-1 col-sm-2 text-center">
                        <i class="devicon-docker-plain-wordmark colored skill-icon" title=""></i>
                    </div>
                    <div class="col-md-1 col-sm-2 text-center">
                        <i class="devicon-bitbucket-original-wordmark colored skill-icon"></i>
                    </div>
                    <div class="col-md-1 col-sm-2 text-center">
                        <i class="devicon-git-plain-wordmark colored skill-icon"></i>
                    </div>
                    <div class="col-md-1 col-sm-2 text-center">
                        <i class="fa-solid fa-database skill-icon" title="SQL, DynamoDB & Sqlite"></i>
                    </div>
                    <div class="col-md-1 col-sm-2 text-center">
                        <i class="devicon-visualstudio-plain colored skill-icon" title="Visual Studio 2022 & VS Code"></i>
                    </div>
                    <div class="col-md-1 col-sm-2 text-center">
                        <img src="images/cicd.png" class="img-fluid rounded-start" alt="CICD" title="AWS CICD Code Pipeline"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <section class="mt-5">
        <div class="row d-flex justify-content-center">
            <div class="col-md-10 col-xl-8 text-center">
                <h3 class="mb-4">Testimonials</h3>
                <p class="mb-4 pb-2 mb-md-5 pb-md-0">
                    Lorem ipsum dolor sit amet, consectetur adipisicing elit. Fugit, error amet
                    numquam iure provident voluptate esse quasi, veritatis totam voluptas nostrum
                    quisquam eum porro a pariatur veniam.
                </p>
            </div>
        </div>

        <div class="row text-center d-flex align-items-stretch">
            @foreach (var testimonal in aboutMe.Testimonals)
            {
                <div class="col-md-4 mb-5 mb-md-0 d-flex align-items-stretch">
                    <div class="card testimonial-card">
                        <div class="card-up" style="background-color: @testimonal.BackColor"></div>
                        <div class="avatar mx-auto bg-white">
                            <img src=@testimonal.Photo
                             class="rounded-circle img-fluid" />
                        </div>
                        <div class="card-body">
                            <h4 class="mb-4">@testimonal.Name</h4>
                            <figcaption class="blockquote-footer">
                                <em>@testimonal.Designation</em>
                            </figcaption>
                            <hr />
                            <p class="dark-grey-text mt-4">
                                <i class="fas fa-quote-left pe-2"></i>
                                @testimonal.Testimonal
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
</div>

@code {
    private AboutMeModel aboutMe = new();

    protected async override Task OnInitializedAsync()
    {
        var portfolio = await _client.GetFromJsonAsync<PortfolioModel>("Portfolio.json");
        aboutMe = portfolio?.AboutMeModel ?? new();
    }
}
